<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/tv_searchBar"
        android:layout_width="622dp"
        android:layout_height="54dp"
        android:layout_marginStart="93dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/rectangle"
        android:backgroundTint="@color/colorAccent"
        android:text="  Search..."
        android:textColor="#707278"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="317dp"
        android:layout_height="316dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="76dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintStart_toEndOf="@+id/imageButton3"
        app:layout_constraintTop_toBottomOf="@+id/tv_searchBar" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="317dp"
        android:layout_height="316dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="76dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintStart_toEndOf="@+id/imageButton"
        app:layout_constraintTop_toBottomOf="@+id/tv_searchBar" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="317dp"
        android:layout_height="316dp"
        android:layout_marginStart="93dp"
        android:layout_marginTop="76dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_searchBar" />

    <Button
        android:id="@+id/btn_advencedSearch"
        android:layout_width="107dp"
        android:layout_height="18dp"
        android:layout_marginStart="608dp"
        android:background="@color/colorBg"
        android:text="Advanced Search"
        android:textAllCaps="false"
        android:textColor="@color/colorHeader"
        android:textSize="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_searchBar" />

    <Button
        android:id="@+id/button4"
        android:layout_width="317dp"
        android:layout_height="72dp"
        android:layout_marginStart="72dp"
        android:background="@color/colorBg"
        android:text="Button"
        app:layout_constraintStart_toEndOf="@+id/button9"
        app:layout_constraintTop_toBottomOf="@+id/imageButton" />

    <Button
        android:id="@+id/button16"
        android:layout_width="317dp"
        android:layout_height="72dp"
        android:layout_marginStart="72dp"
        android:background="@color/colorBg"
        android:text="Button"
        app:layout_constraintStart_toEndOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/imageButton2" />

    <Button
        android:id="@+id/button9"
        android:layout_width="317dp"
        android:layout_height="72dp"
        android:layout_marginStart="93dp"
        android:background="@color/colorBg"
        android:gravity="left"
        android:text=" DrinkName \n drinkPrice"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton3" />

</android.support.constraint.ConstraintLayout>
